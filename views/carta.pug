doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/carta.css')
  body
    .page-center
      .card
        .header
          if dados && dados._foto
            img.avatar(src=`/images/${dados._foto}`, alt="Foto do usu√°rio")
          .user-block
            h1.titulo= title
            h2.nome #{dados._nome}
            if dados && dados._data
              p.meta Criada em #{dados._data}

        .letter
          h3.subtitulo Sua carta
          .paper
            pre.carta= dados._carta
