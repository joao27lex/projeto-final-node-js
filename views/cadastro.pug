doctype html

html
head
    title= title
    link(rel='stylesheet', href='/stylesheets/cadastro.css')

body
    block content
        .main-center
            .container
            h1= title
            form(action="/cadastro", method="post", enctype="multipart/form-data")
                .form-group
                input.form-control-lg(type='text', name="txtnome", placeholder="Seu Nome")
                .form-group
                input.form-control-lg(type="text", name="txtemail", placeholder="Seu email")
                .form-group
                input.form-control-lg(type="password", name="txtsenha", placeholder="Sua senha")
                .form-group
                input.form-control-file.form-control-lg(type="file", name="foto")
                .form-group
                textarea(name="mensagem", rows="4", cols="50", placeholder="Sua mensagem aqui...")
                button.btn.btn-primary(type="submit") Enviar dados
